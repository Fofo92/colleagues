<% @user.events.each do |event| %>
  <div class="container card-product">
    <%= cl_image_tag event.photos.any? ? event.photos.first.key : "https://res.cloudinary.com/drzg8kw0k/image/upload/v1611342995/4hux27613gnhmjimg612mls9chi0.jpg" %>
    <div class="card-user-infos mt-2">
      <%= event.name %>
      <% if event.starts_at.strftime("%d/%m/%Y") == event.ends_at.strftime("%d/%m/%Y") %>
        le <%= event.starts_at.strftime("%d/%m/%Y") %>
      <% else %>
        du <%= event.starts_at.strftime("%d/%m/%Y") %> au <%= event.ends_at.strftime("%d/%m/%Y") %>
      <% end %>
      <p><%= event.description %></p>
    </div>
    <div class="icon-zone">
      <ul class="list-unstyled">
        <li class="list-unstyled">
          <% if policy(event).show? %>
            <%= link_to event_path(event) do %><i class="fas fa-eye m-0"></i><% end %>
          <% end %>
        </li>
        <li class="list-unstyled">
          <% if policy(event).update? %>
            <%= link_to edit_event_path(event) do %>
              <i class="fas fa-edit list-inline-item"></i>
            <% end %>
          <% end %>
        </li>
        <li class="list-unstyled">
          <% if policy(event).destroy? %>
            <%= link_to event_path(event), method: :delete, data: {confirm: "Êtes vous sûr ?"} do %>
              <i class="fas fa-trash-alt list-inline-item"></i>
            <% end %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
<% end %>
