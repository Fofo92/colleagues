<% @my_bookings.each do |my_booking| %>
  <div class="card-container mt-4" style="postiion:relative; border-radius:4px;">
    <% if policy(my_booking.event).show? %>
      <%= link_to event_path(my_booking.event), class: "text-reset text-decoration-none" do %>
        <%= render "user_events_cards", event: my_booking.event %>
      <% end %>
    <% else %>
      <%= render "user_events_cards", event: my_booking.event %>
    <% end %>

    <div class="minus-icon-container">
      <ul class="minus-icon">
        <li class="media">
          <% if my_booking.user == current_user %>
            <%= link_to booking_path(my_booking), method: :patch do %><i class="fas fa-user-minus" style="color:tomato; z-index:3;"></i><% end %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
<% end %>
