<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to events_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/drzg8kw0k/image/upload/v1612025681/Coolleagues/logo_ilmvhz.png" %>
  <% end %>

  <% if user_signed_in? %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to new_event_path, class: "nav-link " do %>Create an event<% end %>
        </li>
        <li class="nav-item">
          <%= link_to events_path, class: "nav-link " do %>Events<% end %>
        </li>
        <% if current_user.photo.attached? %>
         <%= image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <li class="nav-item dropdown">
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to user_path(current_user), class: "dropdown-item" do %>
                <i class="far fa-id-badge"></i> Go to my profile
              <% end %>
              <%= link_to user_path(current_user), class: "dropdown-item" do %>
                <i class="fas fa-user"></i> <%= current_user.email %>
              <% end %>
              <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
                <i class="fas fa-sign-out-alt"></i> Log out
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
